<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:PeopleJornal;assembly=PeopleJornal"      
		x:Class="PeopleJornal.AddDetailPage"
		BackgroundColor="#EFEFEF"
        Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="16">
            <Frame HasShadow="false" BackgroundColor="#FFFFFF">
                <StackLayout
                    Orientation="Vertical">
                    <Label Text="Service Name" TextColor="Black" />
                    <Entry Placeholder="twitter" HeightRequest="40" Text="{Binding Detail.ServiceName}" />
                    <BoxView HeightRequest="8" />
                    <Label Text="Service Handler"   TextColor="Black" />
                    <Entry Placeholder="williamsrodz" HeightRequest="40"  Text="{Binding Detail.ServiceHandler}" />
                    <BoxView HeightRequest="8" />
                </StackLayout>
            </Frame>
            <BoxView HeightRequest="8" />
            <Button
                Text="save"
                HorizontalOptions="FillAndExpand"
                TextColor="White"
                FontSize="16"
                BackgroundColor="#E91E63"
                Command="{Binding SaveCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
